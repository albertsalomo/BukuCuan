<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center"
    android:background="@color/yellow"
    android:gravity="center">

    <!--Buat bikin 1 baris-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--item 1-->
        <LinearLayout
            android:id="@+id/button_nav_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/icon_nav_home"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/label_nav_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:text="Home"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_nav_transaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/icon_nav_transaction"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/transaction_logo"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/label_nav_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:text="Transaction"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_nav_graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/icon_nav_graph"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/graph_nav_logo"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/label_nav_graph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:text="Graph"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

